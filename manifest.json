{
  "manifest_version": 2,
  "name": "PDSls Redirector",
  "version": "1.0.1",
  "description": "Open the PDSls page corresponding to an atproto compatible website.",
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "bookmarks",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "32": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "PDSls Redirector"
  },
  "commands": {
    "pdsls-tab": {
      "suggested_key": {
        "default": "Ctrl+Alt+1"
      },
      "description": "Open a new PDSls tab"
    }
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "applications": {
    "gecko": {
      "id": "pdsls@dreary.dev"
    }
  }
}